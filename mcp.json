{
  "mcpServers": {
    "perplexity-mcp": {
      "env": {
        "PERPLEXITY_API_KEY": "YOUR_API_KEY_HERE",
        "PERPLEXITY_MODEL": "sonar",
        "NODE_NO_WINDOW": "1"
      },
      "command": "uvx",
      "args": [
        "perplexity-mcp"
      ],
      "enabled": true,
      "windowsHide": true
    },
    "server-sequential-thinking": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@smithery/cli@latest",
        "run",
        "@smithery-ai/server-sequential-thinking",
        "--config",
        "{}"
      ],
      "enabled": true,
      "windowsHide": true,
      "env": {
        "NODE_NO_WINDOW": "1"
      }
    },
    "browser-tools": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@agentdeskai/browser-tools-mcp@1.2.0"
      ],
      "enabled": true,
      "windowsHide": true,
      "env": {
        "NODE_NO_WINDOW": "1"
      }
    },
    "brave-search": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "YOUR_API_KEY_HERE",
        "NODE_NO_WINDOW": "1"
      },
      "enabled": true,
      "windowsHide": true
    },
    "github": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@smithery/cli@latest",
        "run",
        "@smithery-ai/github",
        "--config",
        "{\"githubPersonalAccessToken\":\"YOUR_GITHUB_TOKEN_HERE\"}"
      ],
      "enabled": true,
      "windowsHide": true,
      "env": {
        "NODE_NO_WINDOW": "1"
      }
    },
    "obsidian-mcp": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@smithery/cli@latest",
        "run",
        "obsidian-mcp",
        "--config",
        "{\"vaultPath\":\"C:\\\\Users\\\\immor\\\\OneDrive\\\\obsidian_world\"}"
      ],
      "enabled": true,
      "windowsHide": true,
      "env": {
        "NODE_NO_WINDOW": "1"
      }
    },
    "desktop-commander": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@smithery/cli@latest",
        "run",
        "@wonderwhy-er/desktop-commander",
        "--key",
        "YOUR_KEY_HERE"
      ],
      "enabled": true,
      "windowsHide": true,
      "env": {
        "NODE_NO_WINDOW": "1"
      }
    }
  }
}